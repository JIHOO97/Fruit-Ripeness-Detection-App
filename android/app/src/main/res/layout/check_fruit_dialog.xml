<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/round_corner_design"
    android:backgroundTint="@color/app_color"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/check_fruit_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="30dp"
        android:text="Are you sure this is apple?"
        android:textColor="#fff"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_fruit_dialog_no"
            android:src="@drawable/ic_baseline_wrong_icon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:id="@+id/check_fruit_dialog_yes"
            android:src="@drawable/ic_baseline_correct_logo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>